{% if block_style == "style_1" %}
<div class="container">
  <div class="row">
    {% if dpl_column_left_style == true %}
    <div class="top-brands">
          {% if top_brands_title != blank %}
          <h3 class="top-brands-heading">
            {% render 'multilang' with top_brands_title %}
          </h3>
          {% endif %}
          <div class="brands-list">
            <ul class='brandgrid'>
              {% assign curr = "" %}
              {% for vendor in shop.vendors %}
              {% assign first = vendor | strip_html | upcase | truncate: 1, '' %}
              {% assign curr = first %}
                {% if shop.vendors.size <= 10 %}
                <li class='brand-item not-view-all'>{{ vendor | link_to_vendor }}</li>
                {% else %}
                <li class='brand-item view-all'>{{ vendor | link_to_vendor }}</li>
                {% endif %}
              {% endfor %}
          </ul>
          {% if shop.vendors.size > 10 %}
            {% if top_brands_view_all_text != blank and top_brands_view_all_link != blank %}
              <div class='brand-view-all'>
                <a href="{{top_brands_view_all_link}}">
                  {% render 'multilang' with top_brands_view_all_text %}
                </a>
              </div>
            {% endif %}
          {% endif %}
        </div>
    </div>
    {% endif %}
    <div class="wrapper-right-column {% if dpl_column_first_style_left %}full-width{% endif %}">
      <div class="col-12 {% if dpl_column_first_style and dpl_column_second_style %}column-left col-md-12 col-lg-6 {% elsif dpl_column_first_style == false and dpl_column_second_style == false  %}col-md-12 full-width{% else %}col-md-12 col-lg-9{% endif %}">
        <div class="row hl-shuffle-container" style="-webkit-column-count: {{per_row_1}};column-count: {{per_row_1}}">    
          {% for l in linklists[link.handle].links %}
          <div class="inner col-12 {% if dpl_column_first_style == false and dpl_column_second_style == false  %}col-md-12 col-lg-3 {% else %}col-md-12 col-lg-6{% endif %}">
            <div class="inner-wrap">
              <a href="{{ l.url }}" class="current second-menu">
                {% render 'multilang' with l.title %}
                <span class="icon-dropdown">
                  <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
              </a>

              {% if linklists[l.handle] != empty %}
              <ul class="dropdown dropdow-lv2">
                <li class="menu-mb-title" style="display: none;">
                  <span class="icon-dropdown no-event">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                  </span>
                  {% render 'multilang' with l.title %}
                </li>

                {% for child_l in linklists[l.handle].links %}
                <li>
                  <a class="third-menu {% if child_l.active %}current{% endif %}" href="{{ child_l.url }}">
                    {% render 'multilang' with child_l.title %}
                  </a>
                </li>
                {% endfor %}
              </ul>
              {% endif %}

            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <div class="col-12 {% if dpl_column_first_style and dpl_column_second_style %}column-right col-md-12 col-lg-6 {% elsif dpl_column_first_style == false %}no-product col-md-12 col-lg-3{% else %}col-md-12 col-lg-3 no-banner{% endif %}">
        {% if dpl_column_first_style %}
        {% if featured_product != blank %}
        <div class="featured-product">
          {% if title_featured_product != blank %}
          <h3>
            {% render 'multilang' with title_featured_product %}
          </h3>
          {% endif %}

          <div class="featuredProductCarousel product-grid one-items" data-row="1" data-rowtb="1" data-rowtblg="1" data-rowbm="1">
            {% for product in collections[featured_product].products limit:featured_product_limit_all %}
              {% render 'mega-menu-product-grid', product: product %}
            {% endfor %}
          </div>

        </div>
        {% endif %}
        {% endif %}

        {% if dpl_column_second_style %}
        {% if banner_first_style != blank %}
        <div class="banner">
          <a href="{{ link_banner_first_style }}" title="" class="animate-hvr">    
            <img src="{{ banner_first_style | img_url : "224x" }}" alt=""
                 class="lazyload"
                 data-src="{{ banner_first_style | img_url : "224x"}}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ banner_first_style.aspect_ratio }}"
                 data-sizes="auto">
          </a>
        </div>
        {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endif %}


