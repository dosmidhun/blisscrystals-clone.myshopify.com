        "name": "Block Image",
        "settings": [
          	{
            "type": "checkbox",
            "id": "enable",
            "label": "Enable",
            "default": true
      		},
			{
            "type": "image_picker",
            "id": "image",
            "label": "Image 1"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link 1",
            "info": "Optional"
          },
		  {
            "type": "image_picker",
            "id": "image_1",
            "label": "Image 2"
          },
          {
            "type": "url",
            "id": "link_1",
            "label": "Link 2",
            "info": "Optional"
          }
        ]
      },
        {
          "type": "quote",
          "name": "Custom Block",
          "settings": [
            {
            "type": "checkbox",
            "id": "enable",
            "label": "Enable",
            "default": true
            },
            {
              "type": "text",
              "id": "title",
              "label": "Heading",
              "default": "Custom Block"
            },
            {
              "type": "textarea",
              "id": "quote",
              "label": "Text",
              "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
            }
          ]
        }
      ]
    }
{% endschema %}

<style>
  {% unless section.settings.display_sidebar_detail_page %}
  .template-product .sidebar-label{
    display: none;
  }
  {% endunless %}  

  @media (min-width: 992px) {
    {% unless section.settings.display_sidebar_detail_page %}
