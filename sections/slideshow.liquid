<script>
if($('.slide_video').length || $('.slide_mp4').length ) {

  function onYouTubeIframeAPIReady(){
    $('.home-slideshow .slide_video').each(function() {
      var iframe = $(this).find('iframe').attr("id");
      var videoId = $(this).find('iframe').attr("data-video-id");
      player = new YT.Player(iframe, {
        videoId: videoId,
        events: {
          'onStateChange':onPlayerStateChange
        }
      });
    });
  }

  var tag = document.createElement('script');
  tag.src = "https://www.youtube.com/iframe_api";
  var firstScriptTag = document.getElementsByTagName('script')[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

  $(document).on('ready', function() {
    $('.slideslick').on('afterChange', function(event, slick, currentSlide){
      if ($(this).find('.slide_video.slick-active').find('.youtube-player').length > 0) {
        if ($(this).find('.slide_video.slick-active').length > 0) {
          
          $(this).find('.slide_video.slick-active').find('.youtube-player')[0].contentWindow.postMessage('{"event":"command","func":"' + 'playVideo' + '","args":""}', '*');
          $(this).slick('slickPause');
          
        } else if (!$(this).find('.slick-active').hasClass('.slide_mp4, .slide_video')) {
          
          $(this).find('.slide_video').find('.youtube-player')[0].contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
          $(this).slick('slickPlay');
          
        }
      }

      if ($(this).find('.slide_mp4.slick-active').length > 0) {
        $(this).find(".slide_mp4.slick-active .video").get(0).play();
        $(this).slick('slickPause');
      } else if (!$(this).find('.slick-active').hasClass('.slide_mp4')) {
       $(this).find(".slide_mp4 .video").get(0).pause();
      }
  
    });
  });

  function onPlayerStateChange(event) {

    if(event.data === 0) {  
      $('.slideslick').slick('slickPlay');

    }else{
      player.playVideo();
       $('.slideslick').slick('slickPause');
    } 
  }

  function myFunction() {
    $('.slideslick').slick('slickPlay');
  }

}

</script>
