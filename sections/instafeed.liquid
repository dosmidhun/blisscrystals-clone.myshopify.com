{% include 'gravityadmin' %}
<div style="display: none !important;  visibility: hidden !important;" class="cmspro-section" id="cmspro-ad84ccf1"></div>
{% if section.settings.show_instagram %}
<section class="home-instagram" id="home-instagram-{{ section.id }}">
  <div class="container medium">
    {% if section.settings.instagram_title != blank %}
    <div class="widget-title">   
      <h3 class="box-title">
        <i class="fa fa-instagram" aria-hidden="true"></i>
        {% render 'multilang' with section.settings.instagram_title %}
      </h3>
      {% if section.settings.instagram_des != blank %}
      <p class="desc-text">
        {% render 'multilang' with section.settings.instagram_des %}
      </p>
      {% endif %}
    </div>
    {% endif %}
    <style>#insta-feed{width:{{section.settings.feed_width}}%;}#insta-feed h2{font-size:{{section.settings.heading_size}}px;font-family: {{section.settings.heading_font.family }};}{{ section.settings.heading_font | font_face }}</style>{{section.settings.html_area}}{% unless section.settings.html_area contains "feed-" %}<div id="insta-feed"></div>{% endunless  %}
</div>
</section>
<style>#insta-feed{width:{{section.settings.feed_width}}%;}#insta-feed h2{font-size:{{section.settings.heading_size}}px;font-family: {{section.settings.heading_font.family }};}{{ section.settings.heading_font | font_face }}</style>{{section.settings.html_area}}{% unless section.settings.html_area contains "feed-" %}<div id="insta-feed"></div>{% endunless  %}
{% endif %}

{%schema%}
{
	"name":"Instafeed App",
	"settings":[
		{
			"type":"font_picker",
			"label":"Heading font.",
			"id":"heading_font",
			"default": "helvetica_n4"
		},
		{
	        "type": "checkbox",
	        "id": "show_instagram",
	        "label": "Enable",
	        "default": true
	    },
	    {
	        "type": "text",
	        "id": "instagram_title",
	        "label": "Title",
	        "default": "#Bicycl√©"
	    },
	    {
	        "type": "text",
	        "id": "instagram_des",
	        "label": "Instagram Description",
	        "default": " Phasellus lorem malesuada ligula pulvinar commodo maecenas suscipit auctom."
	    },
		{
			"type":"range",
			"id":"heading_size",
			"min":10,"max":30,
			"step":1,
			"unit":"px",
			"label":"Heading Size",
			"default":20
		},
		{
			"type":"range",
			"id":"feed_width",
			"min":50,
			"max":100,
			"step":5,
			"unit":"%",
			"label":"Feed Width",
			"default":100
		},
		{
			"type":"textarea",
			"id":"html_area",
			"label":"Custom Code (optional)"
		}
		],
		"presets":[
		{
			"name":"Instafeed App",
			"category":"Instagram Feed"
		}
		]
	}
{%endschema%}