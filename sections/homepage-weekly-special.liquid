{% include 'gravityadmin' %}
<div style="display: none !important;  visibility: hidden !important;" class="cmspro-section" id="cmspro-3a667294"></div>
{% if section.settings.show_weekly_special %}
<section class="homepage-weekly-special" id="section-{{section.id}}">
  <div class="container medium">
    {% if section.settings.weekly_special_title != blank %}
    <div class="widget-title">
      <h3>
        {% render 'multilang' with section.settings.weekly_special_title %}
      </h3>
      {% if section.settings.weekly_special_desc != blank %}
        <p class="desc-text">{% render 'multilang' with section.settings.weekly_special_desc %}</p>
      {% endif %}
    </div>
    {% endif %}
    <div class="row-bt" >
      {% for block in section.blocks %}
      <div class="item column col column-{{block.id}} {% if section.blocks.size == 2 %} two-col{% elsif section.blocks.size == 3 %} three-col {% else %} one-col{% endif %}">
        <div class="item-img">
         <a href="{{block.settings.ws_link}}" title="{{block.settings.ws_img_heading}}">
              {% if block.settings.ws_img != blank %}
              {%- assign img_url = block.settings.ws_img | img_url: '1024x' -%}
              <img src="https:{{ img_url}}" alt="{{block.settings.ws_img_heading}}"
                   class="lazyload"
                   data-src="https:{{ img_url }}"
                   data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                   data-aspectratio="{{ img_url.aspect_ratio }}"
                   data-sizes="auto">
              {% else %}
              <span class="not_img">720 x 570px</span>
              {% endif %}
              <figcaption class="{% if block.settings.ws_img_heading_position == 'top' %} position-top{% elsif block.settings.ws_img_heading_position == 'bottom' %} position-bottom {% else %} position-middle{% endif %}">
                {% if block.settings.ws_img_sub_heading != blank %}
                <h5 class="sub-heading" style="font-size: {{ block.settings.font_size_img_sub_heading }};color: {{ block.settings.color_img_sub_heading }}; border-bottom: 1px solid {{ block.settings.color_img_sub_heading }};">
                  {% render 'multilang' with  block.settings.ws_img_sub_heading %}
                </h5>
                {% endif %}

                {% if block.settings.ws_img_heading != blank %}
                <h3 class="heading" style="font-size: {{ block.settings.font_size_img_heading }};color: {{ block.settings.color_img_heading }};">
                  {% render 'multilang' with  block.settings.ws_img_heading %}
                </h3>
                {% endif %}
              </figcaption>
            </a>
        </div>
        <div class="item-content">
          {% if block.settings.ws_content_heading != blank %}
          <h2 style="font-size: {{ block.settings.font_size_content_heading }};color: {{ block.settings.color_content_heading }};">
            {% render 'multilang' with  block.settings.ws_content_heading %}
          </h2>
          {% endif %}
          	{% if block.settings.display_promotion_text %}
          	<div class="promotion">
            {% if block.settings.ws_content_promotion_text != blank %}
            <span class="promotion-text" style="font-size: {{ block.settings.font_size_content_promotion_text }};color: {{ block.settings.color_content_promotion_text }};">
              {% render 'multilang' with  block.settings.ws_content_promotion_text %}
            </span>
            {% endif %}

            {% if block.settings.ws_content_promotion_code != blank %}
            <span class="promotion-code" style="font-size: {{ block.settings.font_size_content_promotion_code }};color: {{ block.settings.color_content_promotion_code }};">
              {% render 'multilang' with  block.settings.ws_content_promotion_code %}
            </span>
            {% endif %}
            </div>
            {% endif %}

            {% if block.settings.ws_content_desc != blank %}
            <p class="desc-text" style="font-size: {{ block.settings.font_size_content_desc }};color: {{ block.settings.color_content_desc }};">
              {% render 'multilang' with  block.settings.ws_content_desc %}
            </p>
            {% endif %}

            {% if block.settings.ws_content_btn_text != blank %}
            <a class="btn" href="{{ block.settings.ws_link }}">{% render 'multilang' with block.settings.ws_content_btn_text %}</a>
            {% endif %}
          

        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<style>
  #section-{{section.id}}{
    margin-top: {{ section.settings.space_on }}px;
    margin-bottom: {{ section.settings.space_below }}px;
  }
</style>

