          {
            "type" : "color",
            "id": "color_desc",
            "label": "Description color",
            "default" : "#fff"
          }
		    ]
	  } 
	],
	"presets": [{
      "name": "Homepage Top Banner",
      "category": "block images",
      "blocks": [
        {
          "type": "banner"
        }
      ]
    }]
  }
{% endschema %}
