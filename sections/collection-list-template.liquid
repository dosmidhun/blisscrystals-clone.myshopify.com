{% include 'gravityadmin' %}
<div style="display: none !important;  visibility: hidden !important;" class="cmspro-section" id="cmspro-df4d2ece"></div>
{% if section.collection_results_per_page != blank %}
  {% assign product_per_page = section.collection_results_per_page %}
{% else %}
  {% assign product_per_page = 15 %}
{% endif %}
    
{% paginate collection.products by product_per_page %}
{% render 'toolbar-list' %}

<div class="product-list row-bt">
  {% if collection.products_count > 0 %}
    {% for product in collection.products %}
    {% render 'product-list-item', product: product %}
    {% endfor %}
  {% else %}
  	<p class="text-center" {% if settings.enable_multilang %}data-translate="collections.general.no_matches"{% endif %}>{{ 'collections.general.no_matches' | t }}</p>
  {% endif %}
</div>
  
{% if paginate.pages > 1 %}
<div class="padding collection-padding">
  {% render 'pagination-page', paginate: paginate %}
</div>
{% endif %}

{% endpaginate %}